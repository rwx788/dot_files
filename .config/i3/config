set $ws1 "1:Mail"
set $ws2 "2:Chat"
set $ws3 "3"
set $ws4 "4:Www"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7:Dev"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $ws11 "y"
set $ws12 "u"
set $ws13 "i"
set $ws14 "o"
set $ws15 "p"

# Start default apps
exec --no-startup-id i3-msg 'workspace $ws1; exec thunderbird'
exec --no-startup-id i3-msg 'workspace $ws2; exec hexchat'
exec --no-startup-id i3-msg 'workspace $ws4; exec firefox'
exec --no-startup-id i3-msg 'workspace $ws7; exec konsole'

# switch to workspace
